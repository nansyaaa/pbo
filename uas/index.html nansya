<body>

    <div class="card" id="loginPage">
        <h2>Login Member</h2>
        <input type="text" id="username" placeholder="Username">
        <input type="password" id="password" placeholder="Password">
        <button onclick="app.handleLogin()">Masuk</button>
    </div>

    <div class="card hidden" id="dashboardPage">
        <h2>Selamat Datang</h2>
        <div class="info-box">
            <p id="greeting" style="font-size: 1.2rem; font-weight: bold; color: #28a745;"></p>
            <p id="userStatus">Status: Aktif</p>
        </div>
        <button class="logout-btn" onclick="app.handleLogout()">Keluar</button>
    </div>

    <script>
        // --- CLASS MODEL (PBO) ---
        class Member {
            constructor(username, password) {
                this.username = username;
                this.password = password;
            }
        }

        // --- CLASS SISTEM DATABASE (JSON & LocalStorage) ---
        class Database {
            constructor() {
                this.key = 'koperasi_db';
                this.init();
            }

            init() {
                // Jika database belum ada di LocalStorage, buat data baru
                if (!localStorage.getItem(this.key)) {
                    const initialMembers = [
                        new Member('koperasi', 'koperasi123'),
                        new Member('nansya', 'nansya123'),
                        new Member('caca', 'caca123')
                    ];
                    localStorage.setItem(this.key, JSON.stringify(initialMembers));
                }
            }

            findUser(username, password) {
                const members = JSON.parse(localStorage.getItem(this.key));
                return members.find(m => m.username === username && m.password === password);
            }
        }

        // --- CLASS APLIKASI (Main Logic) ---
        class KoperasiApp {
            constructor() {
                this.db = new Database();
            }

            handleLogin() {
                const userInp = document.getElementById('username').value;
                const passInp = document.getElementById('password').value;

                const user = this.db.findUser(userInp, passInp);

                if (user) {
                    this.renderDashboard(user);
                } else {
                    alert("Gagal Login! Periksa kembali Username dan Password Anda.");
                }
            }

            renderDashboard(user) {
                document.getElementById('loginPage').classList.add('hidden');
                document.getElementById('dashboardPage').classList.remove('hidden');
                document.getElementById('greeting').innerText = `Hai, ${user.username}!`;
            }

            handleLogout() {
                document.getElementById('loginPage').classList.remove('hidden');
                document.getElementById('dashboardPage').classList.add('hidden');
                document.getElementById('username').value = '';
                document.getElementById('password').value = '';
            }
        }

        // Inisialisasi Aplikasi
        const app = new KoperasiApp();
    </script>
</body>
</html>
