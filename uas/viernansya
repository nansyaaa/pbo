<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Aplikasi Login LocalStorage</title>
    <style>
        body {
            margin: 0;
            height: 100vh;
            font-family: Arial, sans-serif;
            background: linear-gradient(#4facfe, #00c6ff);
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url("https://i.ibb.co/7GJpTzD/clouds.png");
            background-repeat: repeat-x;
            background-position: bottom;
        }

        .box {
            background: white;
            padding: 25px;
            border-radius: 10px;
            width: 300px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
        }

        button {
            width: 100%;
            padding: 10px;
            background: #2196f3;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        button:hover {
            background: #1976d2;
        }
    </style>
</head>
<body>

<div class="box" id="loginBox">
    <h2>Login</h2>
    <input type="text" id="username" placeholder="Username">
    <input type="password" id="password" placeholder="Password">
    <button onclick="login()">Login</button>
</div>

<div class="box" id="userBox" style="display:none;">
    <h2 id="welcome"></h2>
    <p>Selamat datang di halaman user</p>
    <button onclick="logout()">Logout</button>
</div>

<script>
    // Database user (JSON)
    const users = [
        { username: "viernansya", password: "202301110038" },
        { username: "bunga", password: "caca" },
        { username: "aureyna", password: "admin123" }
    ];

    // Simpan ke localStorage
    localStorage.setItem("users", JSON.stringify(users));

    function login() {
        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;

        const dataUsers = JSON.parse(localStorage.getItem("users"));

        const user = dataUsers.find(
            u => u.username === username && u.password === password
        );

        if (user) {
            localStorage.setItem("loginUser", username);
            showUser();
        } else {
            alert("Gagal login! Username atau password salah.");
        }
    }

    function showUser() {
        const loginUser = localStorage.getItem("loginUser");
        if (loginUser) {
            document.getElementById("loginBox").style.display = "none";
            document.getElementById("userBox").style.display = "block";
            document.getElementById("welcome").innerText = "Hai, " + loginUser;
        }
    }

    function logout() {
        localStorage.removeItem("loginUser");
        location.reload();
    }

    showUser();
</script>

</body>
</html>
